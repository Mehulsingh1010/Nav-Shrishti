{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "configs/schema.js", "configs/db.js", "src/app/api/products/[id]/route.jsx", "src/app/api/products/route.jsx", "src/app/navlinks/products/[productId]/page.jsx", "src/app/navlinks/products/category/[categoryId]/page.jsx", "src/app/navlinks/products/page.jsx", "src/app/api/payment/products/[productId]/route.jsx", "src/app/user-dashboard/purchase/order/[orderId]/page.jsx", "src/app/api/admin/orders/[id]/route.jsx", "src/app/admin/users/[id]/page.jsx"],
  "exclude": ["node_modules"]
}
